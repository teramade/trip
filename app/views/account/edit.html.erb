<div class="py-3">
    <div class="container">

        <%= form_with(model:@user, url: "/account/update",local:true, method: :patch) do |form| %>
            <div class="form-group">
                <label class="col-form-label">ニックネーム</label>
                <%= form.text_field :nickname, class:"form-controll" %>
            </div>
            <div class="form-group">
                <label class="col-form-label">メールアドレス</label>
                <%= form.email_field :email, autofocus: true, autocomplete: "email", class:"form-controll" %>
            </div>
            <div class="form-group">
                <label class="col-form-label">アイコン</label>
                <%= form.file_field :icon, class:"form-controll-file" %>
                <%= image_tag current_user.icon, height:'100px' %>
            </div>
            <%= form.submit '更新する', class:"btn btn-outline-info" %>
        <% end %>
    </div>
</div>



