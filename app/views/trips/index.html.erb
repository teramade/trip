
<div class="row no-gutter">
    <% @trip.each do |trip| %>
        <div class="card col-sm-3 box-shadow">
			<%= image_tag trip.photo,:class => "card-img-top", height:'250px' %>
            <div class="card-body">
				<p class="card-text"><%= trip.title %></p>
				<div class="d-flex justify-content-between align-items-center">
					<div class="btn-group">
						<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to("Edit","/trips/#{trip.id}/edit") %></button>
						<button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to("Delete","/trips/#{trip.id}/destroy",method: "post",data: {confirm: "削除しますか？"}) %></button>
					</div>
					<small class="text-muted"><%= trip.created_at.strftime("%Y/%m/%d") %></small>
				</div>
			</div>
        </div>
    <% end %>
</div>