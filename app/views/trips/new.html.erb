<div class="py-3">
    <div class="container">
        <%= form_with(url: "/trips/create", local:true, method: :post) do |form| %>
            <div class="form-group">
                <label class="col-form-label">タイトル</label>
                <%= form.text_field :title,maxlength:"15", class:"form-controll", style:"width:250px" %>
            </div>
            <div class="form-group">
                <label class="col-form-label">写真</label>
                <%= form.file_field :photo, class:"form-controll-file" %>
            </div>
            <div class="form-group">
                <label class="col-form-label">タグづけ</label>
                <%= form.text_field :tag_list, class:"form-controll", style:"width:250px" %>
            </div>
            <%= form.submit '投稿する' , class:"btn btn-outline-info"%>
        <% end %>
    </div>
</div>